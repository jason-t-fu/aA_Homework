<h1>Edit your band</h1>

<form action=<%= band_url %> method="post">
  <input type="hidden" name="_method" value="patch">
  <%= auth_token %>

  <%= render "shared/errors" %>
  <br>
  <label>Name: 
    <input type="text" name="band[name]", value="<%= @band.name %>">
  </label>
  <br>
  <input type="submit" value="Edit Band">
</form>